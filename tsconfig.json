{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"outDir": "./build",
		"strict": true,
		"strictNullChecks": true,
		"target": "es5",
		"types": ["node"]
	},
	"exclude": ["source/**/*.test.ts"],
	"include": ["source/**/*.ts"]
}
